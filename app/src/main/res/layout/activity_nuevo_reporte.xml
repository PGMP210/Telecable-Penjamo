<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg"
    android:padding="24dp"
    tools:context=".NuevoReporteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportar Nueva Falla"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="24dp"/>

        <!-- 1. Campo de Selecci贸n de Falla (Spinner) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Falla:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerFalla"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_rounded"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- 2. Campo de Fecha (Selector) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Reporte:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar fecha (Hoy)"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edittext_rounded"
            android:padding="15dp"
            android:layout_marginBottom="16dp"/>

        <!-- 3. Campo de Descripci贸n -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripci贸n de la Falla:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:hint="Ej: 'El internet se desconecta cada 5 minutos' o 'El canal 55 se ve pixelado'."
            android:inputType="textMultiLine"
            android:maxLength="300"
            android:background="@drawable/edittext_rounded"
            android:padding="15dp"
            android:layout_marginBottom="32dp"/>

        <!-- 4. Bot贸n de Reportar Falla -->
        <Button
            android:id="@+id/btnReportarFalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENVIAR REPORTE"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>