<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:padding="24dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceso de Usuarios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1E3A8A"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de Usuario -->
    <EditText
        android:id="@+id/et_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Usuario o Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_rounded"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de Contraseña -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:background="@drawable/edittext_rounded"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/et_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de Contrato (4 números) -->
    <EditText
        android:id="@+id/et_contrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Número de Contrato (4 dígitos)"
        android:inputType="number"
        android:maxLength="4"
        android:background="@drawable/edittext_rounded"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Checkbox para Técnico/Admin -->
    <CheckBox
        android:id="@+id/cb_admin_tecnico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soy Técnico/Administrativo"
        android:layout_marginTop="20dp"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@id/et_contrato"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo de Código Especial (5 números, inicialmente oculto) -->
    <EditText
        android:id="@+id/et_codigo_especial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Código Especial (5 dígitos)"
        android:inputType="number"
        android:maxLength="5"
        android:visibility="gone"
        android:background="@drawable/edittext_rounded"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/cb_admin_tecnico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de Ingreso -->
    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESAR"
        android:textColor="@android:color/white"
        android:backgroundTint="#1E3A8A"
        android:padding="15dp"
        android:layout_marginBottom="32dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Necesitas un drawable para el fondo redondeado de los EditText si quieres que se vea mejor -->
    <!-- En tu proyecto de Android Studio, crea un archivo 'res/drawable/edittext_rounded.xml' con este contenido:
