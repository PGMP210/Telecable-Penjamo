<?xml version="1.0" encoding="utf-8"?>
<!-- activity_vivienda.xml - Pantalla de Vivienda -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Logo de la Empresa -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Logo Empresa" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMACIÓN DE VIVIENDA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />

    <!-- Contenedor de información -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido al sistema de vivienda"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tvInfoVivienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aquí podrás gestionar toda la información relacionada con tu vivienda"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Botón Continuar -->
    <Button
        android:id="@+id/btnContinuarVivienda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="CONTINUAR"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp" />

</LinearLayout>